        <item name="android:navigationBarColor">@color/color000</item>
        <item name="colorPrimaryDark">@color/color000</item>
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item> <!-- This is important -->
        <item name="android:statusBarColor">@color/transparent
        </item> <!-- And then this will be needed -->
        <item name="android:navigationBarColor">?attr/background1</item>
        <item name="android:colorBackground">@android:color/transparent</item>
